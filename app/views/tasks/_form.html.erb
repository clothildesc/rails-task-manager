<div>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless @hide_completed %>
    <%= f.check_box :completed, {}, true, false %>
    <%= f.label :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
</div>
