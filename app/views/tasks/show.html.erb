<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<div>
  <input type="checkbox" id="<% @task.title %>" name="<% @task.title %>" checked=<% @task.completed %>/>
  <label for="<% @task.title %>">
  <% if @task.completed == true %>
    This task is completed
  <% elsif @task.completed == false %>
    This task is not completed yet
  <% end %>
  </label>
</div>

<p><%= link_to "Edit this task", edit_task_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>
